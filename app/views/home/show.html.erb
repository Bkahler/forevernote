  <body class="cbp-spmenu-push">
    <nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
      <h3>Menu</h3>
      <img src='/assets/notebook.png' alt='notebook'>+New Journal
      <form id = 'new_notebook'>
        <input type="text" id='notebook_name'>
        <input type= "submit" value="create">
      </form>
      <div id="jounal_list">
        <% if @journals %>
          <% @journals.each do |journal| %>
          <p><%=journal.name%> </p>
          <%end%>
        <%end%>
      </div>
      <a id="evernote" href="#"><img src='/assets/Evernote.png' alt='evernote'></a>
      <a id="facebook" href="#"><img src='/assets/Facebook.png' alt='facebook'></a>
      <a id="instagram" href="#"><img src='/assets/Instagram.png' alt='instagram'></a>
      <a id="pintrest" href="#"><img src='/assets/Pinterest.png' alt='pinterest'></a>
      <a id="tumblr" href="#"><img src='/assets/Tumblr.png' alt='tumblr'></a>
      <a id="twitter" href="#"><img src='/assets/Twitter.png' alt='twitter'></a>


    </nav>

    <div class="container" id="dashboard">
      <header class="clearfix">
        <!-- <span><%=current_user.name%></span> -->
        <h1>Dashboard</h1>
      </header>
      <div class='instagram' id="image_container">
      </div>
      <div class="main">
        <section class="buttonset">
          <h2></h2>
          <br/>
          <br/>
          <!-- Class "cbp-spmenu-open" gets applied to menu and "cbp-spmenu-push-toleft" or "cbp-spmenu-push-toright" to the body -->
          <button id="showLeftPush">Create a journal and curate your post.</button>

        </section>
      </div>
    </div>
    <!-- Classie - class helper functions by @desandro https://github.com/desandro/classie -->
    <script src="js/classie.js"></script>
    <script>
      var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),
        menuRight = document.getElementById( 'cbp-spmenu-s2' ),
        menuTop = document.getElementById( 'cbp-spmenu-s3' ),
        menuBottom = document.getElementById( 'cbp-spmenu-s4' ),
        showLeftPush = document.getElementById( 'showLeftPush' ),
        body = document.body;


      showLeftPush.onclick = function() {
        classie.toggle( this, 'active' );
        console.log(this);
        $('#showLeftPush').hide();
        classie.toggle( body, 'cbp-spmenu-push-toright' );
        classie.toggle( menuLeft, 'cbp-spmenu-open' );
      };


