<!DOCTYPE html>
<html>
<head>
  <title>Forevernote</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body role='document'>
  <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" id="forevergreen" role="navigation">
      <div class="container">
        <div class="navbar-header" id="forevergreen">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">ForeverNote</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="forevergreynav nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
            <li class="dropdown">
              <% if current_user %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome <%= current_user.name %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href='/home/<%=current_user.id%>'>Go to my Dashboard </a></li>
                  <li><%= link_to "Allow Instragram Access", "/auth/instagram" %></li>
                  <li><%= link_to "Allow EverNote Access", "/auth/evernote" %></li>
                  <li><%= link_to "Allow Facebook Access", "/auth/facebook" %></li>
                  <li><%= link_to "Sign Out", signout_path %></li>
                <%else%>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign in <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Sign in: Twitter", "/auth/twitter" %></li>
                <%end%>
<!--                 <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
